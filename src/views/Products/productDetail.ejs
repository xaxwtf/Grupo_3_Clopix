<!DOCTYPE html>
<html>
    <%- include('../partials/head')  %> 
    <body id="bodyCatalogo">
        <%- include('../partials/header')%>
        <!--contendio-->
        <section class="Productos">

            <% for(let i=0;i<producto.length;i++){ %> 
                <article>
                    <% if(locals.isAdmin) {%>
                        <a href= <%= "/Producto/"+producto[i].id+"/edit" %>  > <img src = "/images/product/<%= producto[i].image_product %>"  alt="imagen Ejemplo">    </a> 
                    <% } %>
                    <% if(!locals.isAdmin){  %>
                        <a href= <%= "/Producto/"+producto[i].id %>  > <img src = "/images/product/<%= producto[i].image_product %>"  alt="imagen Ejemplo">    </a> 
                    <% } %>    
                    <section class="datos">
                        <b>   <label for="Nombre" class="Nombre"><%= producto[i].nameProduct %> </label>   </b>    
                        <label for="Precio" class="Precio">$<%= producto[i].priceUnit %> </label>
                    </section>
                </article>
            <% } %> 
        </section>
        <%- include('../partials/footer')%>

    </body>
</html>